<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6482b9</item>
        <item name="colorPrimaryDark">#143268</item>
        <item name="actionBarStyle">@style/myActionStyle</item>
    </style>

    <!--액션바-->
    <style name="myActionStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/myActionStyle.TitleText</item>
    </style>

    <!--액션바 타이틀-->
    <style name="myActionStyle.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
    </style>



    <!--버튼-->
    <style name="btn">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/my_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--메뉴버튼-->
    <style name="menuBtn">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/my_menu_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--주문관리 리스트 메뉴-->
    <style name="listHeader">
        <item name="android:gravity">center</item>
        <item name="android:background">#7da5e1</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--주문관리 리스트 -->
    <style name="list">
        <item name="android:gravity">center</item>
        <item name="android:background">#edebff</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">9dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--주문 테이블-->
    <style name="oderTable">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/my_order_table</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--주문 테이블 TextView-->
    <style name="oderTableTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
