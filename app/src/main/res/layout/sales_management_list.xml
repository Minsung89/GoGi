<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="#eaf0fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:background="#e9f4f9"
                android:gravity="center"
                android:text="테이블 번호"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Spinner
                android:background="#e9f4f9"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:id="@+id/sales_table_no"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/sales_search"
                android:padding="5dp"
                android:text="검색"
                style="@style/btn"
                android:layout_weight="2"/>
        </LinearLayout>
        <ListView
            android:id="@+id/sales_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginBottom="20dp">
        </ListView>
        <LinearLayout
            android:paddingTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_line"
                android:gravity="center"
                android:padding="6dp"
                android:text="총 합계"
                android:textColor="#fff"
                android:textStyle="bold" />
            <TextView
                android:background="@drawable/textview_line"
                android:textColor="#fff"
                android:id="@+id/sales_total_price"
                android:gravity="center"
                android:textStyle="bold"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_sales_back"
                style="@style/btn"
                android:text="뒤로가기"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>